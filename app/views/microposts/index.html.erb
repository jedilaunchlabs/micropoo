<p id="notice"><%= notice %></p>


<h1>Micropoos</h1>

<%= flash[:alert] %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @microposts.each do |micropost| %>

      <tr>
        <td><%= micropost.content %>
          <%= image_tag micropost.image.url(:thumb).to_s if micropost.image? %></td>
        <td><%= micropost.user.email %></td>
        <td><%= link_to 'Show', micropost %></td>

        <% if can? :update, micropost  %>
          <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <% end %>

        <% if can? :destroy, micropost  %>
          <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
